version: '3.8'

services:
  php:
    build:
      context: ./backend/php
    container_name: php-container
    networks:
      - my-network
    volumes:
      - ./backend/php/my_project_directory:/var/www/html
    ports:
      - "8000:8000"
    environment:
      - SYMFONY_ENV=dev
      - DATABASE_URL=mysql://evgen:ggghosttt123321@db:3306/parser
      - REDIS_URL=redis://parser-redis:6379  # Обратите внимание на изменение хоста
    command: bash -c "composer install --optimize-autoloader && php -S 0.0.0.0:8000 -t public"

  db:
    build:
      context: ./backend/db
    container_name: mysql-container
    networks:
      - my-network
    ports:
      - "3306:3306"
    environment:
      MYSQL_ROOT_PASSWORD: ggghosttt123321
      MYSQL_DATABASE: parser
      MYSQL_USER: evgen
      MYSQL_PASSWORD: ggghosttt123321

  frontend:
    build:
      context: ./frontend
    container_name: frontend-container
    networks:
      - my-network
    ports:
      - "3000:3000"
    stdin_open: true
    tty: true

  parser-redis:
    build:
      context: ./parser
    container_name: parser-container
    networks:
      - my-network
    ports:
      - "5000:5000"
      - "6379:6379"  # Экспортируем порт Redis
    volumes:
      - ./parser:/parser
    environment:
      - REDIS_URL=redis://localhost:6379
    command: >
      sh -c "
      redis-server --daemonize yes &&
      cd /parser &&
      python -m your_parser_module
      "
    stdin_open: true
    tty: true

networks:
  my-network:
    driver: bridge